---
import Layout from "../layouts/Layout.astro";
import { getEntry, render } from "astro:content";

const entry = await getEntry("aftercare", "main");
if (!entry) {
  throw new Error("Missing content file: src/content/aftercare/main.md");
}
const { Content } = await render(entry);
const title = entry.data.title ?? "Aftercare";
---
<!-- todo: ask Chat about this prose stuff; settle on a global look -->
<Layout title={`BluTattoo Studio â€” ${title}`}>
  <article
    class="page-article page-article--stack prose
           prose-headings:tracking-tight prose-p:leading-relaxed"
  >
    <h1 class="page-title">{title}</h1>

    <Content />
  </article>
</Layout>
